  "radius": {
    "none": { "$value": "0px", "$type": "dimension" },
    "sm": { "$value": "4px", "$type": "dimension", "$description": "Buttons, inputs, badges" },
    "md": { "$value": "6px", "$type": "dimension", "$description": "Cards, dropdowns, modals — the default" },
    "lg": { "$value": "8px", "$type": "dimension", "$description": "Large containers, images" },
    "xl": { "$value": "12px", "$type": "dimension", "$description": "Feature cards, hero sections (marketing only)" },
    "full": { "$value": "9999px", "$type": "dimension", "$description": "Avatars, circular indicators, pills" }
  },
  "width": {
    "default": { "$value": "1px", "$type": "dimension" },
    "thick": { "$value": "2px", "$type": "dimension" }
  },
  "style": {
    "default": "solid"
  }
}
