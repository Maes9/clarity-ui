{
  "$name": "clarity-ui/typography",
  "$description": "Type scale, font families, and line heights for B2B SaaS interfaces",
  "font": {
    "family": {
      "sans": { "$value": "Inter, ui-sans-serif, system-ui, -apple-system, sans-serif", "$type": "fontFamily" },
      "mono": { "$value": "Geist Mono, ui-monospace, SFMono-Regular, Menlo, monospace", "$type": "fontFamily" }
    },
    "weight": {
      "regular": { "$value": 400, "$type": "fontWeight" },
      "medium": { "$value": 500, "$type": "fontWeight" },
      "semibold": { "$value": 600, "$type": "fontWeight" }
    }
  },
  "text": {
    "xs": {
      "size": { "$value": "0.8125rem", "$type": "dimension" },
      "lineHeight": { "$value": "1.125rem", "$type": "dimension" }
    },
    "sm": {
      "size": { "$value": "0.875rem", "$type": "dimension" },
      "lineHeight": { "$value": "1.25rem", "$type": "dimension" }
    },
    "base": {
      "size": { "$value": "1rem", "$type": "dimension" },
      "lineHeight": { "$value": "1.5rem", "$type": "dimension" }
    },
    "lg": {
      "size": { "$value": "1.125rem", "$type": "dimension" },
      "lineHeight": { "$value": "1.75rem", "$type": "dimension" }
    },
    "xl": {
      "size": { "$value": "1.25rem", "$type": "dimension" },
      "lineHeight": { "$value": "1.75rem", "$type": "dimension" }
    },
    "2xl": {
      "size": { "$value": "1.5rem", "$type": "dimension" },
      "lineHeight": { "$value": "2rem", "$type": "dimension" }
    },
    "3xl": {
      "size": { "$value": "1.875rem", "$type": "dimension" },
      "lineHeight": { "$value": "2.25rem", "$type": "dimension" }
    },
    "4xl": {
      "size": { "$value": "2.25rem", "$type": "dimension" },
      "lineHeight": { "$value": "2.5rem", "$type": "dimension" }
    }
  },
  "letterSpacing": {
    "tight": { "$value": "-0.025em", "$type": "dimension" },
    "normal": { "$value": "0em", "$type": "dimension" },
    "wide": { "$value": "0.025em", "$type": "dimension" }
  },
  "usage": {
    "pageTitle": { "size": "3xl", "weight": "semibold", "letterSpacing": "tight" },
    "sectionTitle": { "size": "lg", "weight": "semibold", "letterSpacing": "tight" },
    "cardTitle": { "size": "base", "weight": "medium", "letterSpacing": "normal" },
    "body": { "size": "base", "weight": "regular", "letterSpacing": "normal" },
    "label": { "size": "sm", "weight": "medium", "letterSpacing": "normal" },
    "caption": { "size": "xs", "weight": "regular", "letterSpacing": "normal" },
    "kpiValue": { "size": "2xl", "weight": "semibold", "letterSpacing": "tight", "fontFamily": "mono" },
    "tableCell": { "size": "sm", "weight": "regular", "letterSpacing": "normal" },
    "tableHeader": { "size": "xs", "weight": "medium", "letterSpacing": "wide" },
    "navItem": { "size": "sm", "weight": "medium", "letterSpacing": "normal" },
    "badge": { "size": "xs", "weight": "medium", "letterSpacing": "normal" },
    "buttonDefault": { "size": "sm", "weight": "medium", "letterSpacing": "normal" }
  }
}
